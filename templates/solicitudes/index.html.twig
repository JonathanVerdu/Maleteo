{% extends 'base.html.twig' %}

{% block title %}Solicitudes{% endblock %}

{% block body %}
    <style>
        table, th, td{
            border: 1px solid black;
            padding: 5px;
        }
        td{
            padding-left:15px;
        }
        table {
            width: 100%;
            margin-bottom:30px;
        }
    </style>
    <div class="wrapper">
        <div class="container-fluid">
            <header class="header">
                <img src="assets/img/logo.svg" alt="Maleteo">
            </header>
            <style>
                .the-form__btn{margin-top:10px;}
                .the-form__input{margin-bottom:10px;}
            </style>
        </div>
    </div>
    <div class="wrapper">
        <h2 class="howworks__title heading2">SOLICITUDES</h2>
        <table>
            <tr>
                <th>NOMBRE</th>
                <th>CIUDAD</th>
                <th>E-MAIL</th>
                <th>EDITAR</th>
                <th>BORRAR</th>
            </tr>

            {% for solicitud in solicitudes %}
                <tr>
                    <td>{{ solicitud.nombre }}</td>
                    <td>{{ solicitud.ciudad }}</td>
                    <td>{{ solicitud.email }}</td>
                    <td><button><a href="{{ solicitud.id }}">EDITAR</a></button></td>
                    <td><button><a href="{{ solicitud.id }}">BORRAR</a></button></td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <footer class="footer">
        <div class="wrapper">
            <div class="container-fluid">
                <img src="assets/img/logo.svg"
                     alt="Maleteo"
                     class="footer__logo">
                <p class="footer__claim">
                    Hecho con ❤️en Madrid
                </p>
            </div>
        </div>
    </footer>
{% endblock %}
