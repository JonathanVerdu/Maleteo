{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <style>
        footer{
            margin-top:50px;
        }
    </style>
    <div class="wrapper">
        <div class="container-fluid">
            <header class="header">
                <img src="assets/img/logo.svg" alt="Maleteo">
            </header>
            <style>
                .the-form__btn{margin-top:10px;}
                .the-form__input{margin-bottom:10px;}
            </style>
        </div>
    </div>
    <div class="wrapper">
        <h2 class="howworks__title heading2">REGISTRO</h2>
        {{ form(form_registro) }}
    </div>
    <footer class="footer">
        <div class="wrapper">
            <div class="container-fluid">
                <img src="assets/img/logo.svg"
                     alt="Maleteo"
                     class="footer__logo">
                <p class="footer__claim">
                    Hecho con ❤️en Madrid
                </p>
            </div>
        </div>
    </footer>
{% endblock %}
